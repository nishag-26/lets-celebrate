
<h2>Edit the organizer: {{organizer.title}}</h2>

<form method="POST" action="/organizers/{{organizer._id}}/edit">
    <label> Title:
        <input type="text" name="title" value="{{organizer.title}}" />
    </label>

    <label> Description:
        <textarea name="description" cols="30" rows="4">{{organizer.description}}</textarea>
    </label>

    <label> Rate:
        <input type="number" name="rating" min="1" max="10" value="{{organizer.rating}}" />
    </label>

    <button>Save changes</button>
</form> 